[flake8]
max-line-length = 88
extend-ignore = 
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # W503: line break before binary operator (conflicts with black)
    W503
exclude = 
    .git,
    __pycache__,
    .venv,
    .pytest_cache,
    .mypy_cache,
    build,
    dist,
    *.egg-info 